<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androiddev.shoes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shoes">
        <activity
            android:name="com.androiddev.startingScreen.SignInActivity"
            android:exported="true" />
        <activity
            android:name="com.androiddev.startingScreen.SignUpActivity"
            android:exported="true" />
        <activity
            android:name="com.androiddev.startingScreen.IntroScreen"
            android:exported="true" />
        <activity
            android:name="com.androiddev.splash.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androiddev.view.ShoeDisplayActivity"
            android:exported="true" />
        <activity
            android:name="com.androiddev.view.ShoesActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>